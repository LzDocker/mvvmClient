<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_weight="1" />


        <android.support.v7.widget.CardView
            android:id="@+id/item_search_pager_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp">

            <RadioGroup
                android:id="@+id/rg_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_index"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/moduleplayer_home_selector"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@drawable/moduleplayer_rb_selector"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/moduleplayer_knowledge_selector"
                    android:gravity="center"
                    android:text="知识体系"
                    android:textColor="@drawable/moduleplayer_rb_selector"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/moduleplayer_pub_selector"
                    android:gravity="center"
                    android:text="公众号"
                    android:textColor="@drawable/moduleplayer_rb_selector"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_nav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/moduleplayer_nav_selector"
                    android:gravity="center"
                    android:text="导航"
                    android:textColor="@drawable/moduleplayer_rb_selector"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_pro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/moduleplayer_pro_selector"
                    android:gravity="center"
                    android:text="项目"
                    android:textColor="@drawable/moduleplayer_rb_selector"
                    android:textSize="12sp" />

            </RadioGroup>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</layout>
