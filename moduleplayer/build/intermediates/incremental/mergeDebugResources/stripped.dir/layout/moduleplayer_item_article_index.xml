<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                       
                                                                

           

    <android.support.v7.widget.CardView
        android:id="@+id/item_search_pager_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp" android:tag="layout/moduleplayer_item_article_index_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="binding_1"      
                    android:textColor="@color/modulePlayer_colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:tag="binding_2"                                     
                    android:textColor="@color/modulePlayer_colorPrimary" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_search_pager_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:tag="binding_3"     
                    android:textColor="@color/modulePlayer_colorPrimary" />

                <TextView
                    android:id="@+id/item_search_pager_chapterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:tag="binding_4"       />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_search_pager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:tag="binding_5"    
                android:textColor="#666"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/item_search_tag_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_search_pager_tag_red_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:tag="binding_6"        />

                    <TextView
                        android:id="@+id/item_search_pager_tag_green_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:tag="binding_7"                
                        android:textColor="@color/modulePlayer_colorPrimary" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_search_pager_like_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/item_search_pager_niceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:tag="binding_8"         />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
         