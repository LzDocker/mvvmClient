<?xml version="1.0" encoding="utf-8"?>
        

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/moduleplayer_fragment_subcode_0">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/modulePlayer_colorWhite"
            app:tabIndicatorColor="@color/modulePlayer_colorPrimary"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/modulePlayer_colorPrimary"
            app:tabTextColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:visibility="gone"
            android:paddingRight="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="请输入要搜索的内容"
                android:gravity="center"
                android:textSize="12sp"
                android:id="@+id/edit_query"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="搜索"
                android:textSize="15sp"
                android:textColor="@color/modulePlayer_colorWhite"
                android:background="@color/modulePlayer_colorPrimary"
                android:id="@+id/tv_search"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:layout_marginRight="12dp"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
         
